{% extends 'EventBundle::layout.html.twig' %}

{% block body %}
    <section class="main-block">
        <article>
            <section>
                <h1>Register</h1>

                <form action="{{ path('register') }}" method="POST">

                    {{ form_errors(form) }}

                    {{ form_row(form.username) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.password) }}

                    {{ form_rest(form) }}

                    <input type="submit" value="Register!">
                </form>
            </section>
        </article>
    </section>
{% endblock %}